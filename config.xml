<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.dot" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dot</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="gaurav@amdocs.com" href="https://www.linkedin.com/in/gaurav-a2b7755b/">
        Dot Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="assets/image/icon.png" width="57" height="57" density="mdpi" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook type="before_prepare" src="scripts/prebuild.js" />
</widget>
